{
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
        "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
        }
    },
    "coveragePathIgnorePatterns": ["test/"],
    "moduleFileExtensions": ["ts", "json", "js"],
    "moduleDirectories": ["node_modules", "src"],
    "testMatch": [
        "**/src/**/(*)+spec.ts"
    ],
    "transform": {
        "^.+\\.ts": "ts-jest"
    },
    "testTimeout": 90000
}